<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="item_movie"
            type="hanyu.com.whattockotlin.beans.MoviesBean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemMovieHeight"
        android:background="@drawable/bg_item_movie">

        <ImageView
            android:id="@+id/imgv_item_movie_cover"
            android:layout_width="@dimen/itemMovieCoverWidth"
            android:layout_height="@dimen/itemMovieCoverHeight"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item_movie.title}"
            android:textColor="@color/TitleColor"
            android:textSize="@dimen/titleTextSize"
            app:layout_constraintStart_toEndOf="@id/imgv_item_movie_cover"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="银翼杀手" />

        <TextView
            android:id="@+id/tv_item_movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/typeTextSize"
            app:layout_constraintStart_toEndOf="@id/imgv_item_movie_cover"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_movie_title" />

        <TextView
            android:id="@+id/tv_list_item_directors_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/directors"
            android:textColor="@color/text66"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgv_item_movie_cover"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_movie_type" />


        <TextView
            android:id="@+id/tv_item_movie_directors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text66"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/tv_list_item_directors_tip"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_movie_type" />

        <TextView
            android:id="@+id/tv_item_movie_casts_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/cast"
            android:textColor="@color/text66"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/imgv_item_movie_cover"
            app:layout_constraintTop_toBottomOf="@id/tv_item_movie_directors" />

        <TextView
            android:id="@+id/tv_item_movie_casts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/text66"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/imgv_item_movie_cover"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_movie_casts_tip" />


        <TextView
            android:id="@+id/tv_item_movie_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/rb_item_movie"
            app:layout_constraintEnd_toEndOf="@id/rb_item_movie"
            app:layout_constraintStart_toStartOf="@id/rb_item_movie"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"
            tool:text="3.5" />

        <hanyu.com.whattockotlin.widgets.RatingBar
            android:id="@+id/rb_item_movie"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_movie_rate" />

    </android.support.constraint.ConstraintLayout>
</layout>